# http://downloads.sourceforge.net/beecrypt/beecrypt-4.1.2.tar.gz

PKGNAM=beecrypt
VERSION=4.1.2
BUILD=${BUILD:-1}

. /etc/pkghelpers
pkghelpers_env

rm -rf $PKG
mkdir -p $PKG

cd $TMP
tar xvf $CWD/$PKGNAM-$VERSION.tar.?z* || exit 1
cd beecrypt-$VERSION || exit 1

# Make sure ownerships and permissions are sane:
pkghelpers_permissions

CFLAGS="$SLKCFLAGS" \
CXXFLAGS="$SLKCFLAGS" \
./configure \
  --prefix=/usr \
  --libdir=/usr/lib$LIBSUFFIX \
  --enable-shared=yes \
  --enable-static=yes \
  --with-cpu=x86_64 \
  --with-arch=x86_64 \
  --with-pic \
  --build=$ARCH-$DISTRO-linux

make || exit 1
make install DESTDIR=$PKG

strip -g $PKG/usr/lib/*.a

mkdir $PKG/usr/doc/beecrypt-$VERSION
cp -a \
  AUTHORS BENCHMARK BUGS CONTRIBUTORS COPYING* NEWS README* \
  $PKG/usr/doc/beecrypt-$VERSION

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc

cd $PKG
pkghelpers_fixup
pkghelpers_makepkg
